{
  "id": "openclaw-honcho",
  "kind": "memory",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "Honcho API key (or set HONCHO_API_KEY env var)"
      },
      "workspaceId": {
        "type": "string",
        "description": "Honcho workspace ID (defaults to 'openclaw')"
      },
      "baseUrl": {
        "type": "string",
        "default": "https://api.honcho.dev"
      },
      "memorySearch": {
        "type": "object",
        "description": "Enable memory_search/memory_get tools (for QMD/local file search)",
        "properties": {
          "enabled": {
            "type": "boolean",
            "description": "Enable passthrough to OpenClaw memory backend",
            "default": false
          }
        }
      }
    }
  },
  "uiHints": {
    "apiKey": {
      "label": "Honcho API Key",
      "sensitive": true,
      "placeholder": "hc_...",
      "help": "API key for Honcho (or use ${HONCHO_API_KEY})"
    },
    "workspaceId": {
      "label": "Workspace ID",
      "placeholder": "openclaw",
      "help": "Honcho workspace ID"
    },
    "baseUrl": {
      "label": "API Base URL",
      "advanced": true,
      "placeholder": "https://api.honcho.dev"
    },
    "memorySearch": {
      "label": "Local File Search",
      "advanced": true,
      "help": "Enable memory_search/memory_get tools that search local files via OpenClaw's memory backend (e.g., QMD)"
    }
  }
}

{
  "id": "moltbot-honcho",
  "kind": "memory",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "apiKey": {
        "type": "string",
        "description": "Honcho API key (or set HONCHO_API_KEY env var)"
      },
      "workspaceId": {
        "type": "string",
        "description": "Honcho workspace ID (defaults to 'moltbot')"
      },
      "baseUrl": {
        "type": "string",
        "default": "https://api.honcho.dev"
      },
      "syncOnStartup": {
        "type": "boolean",
        "default": true
      },
      "dailySyncEnabled": {
        "type": "boolean",
        "default": true
      },
      "syncFrequency": {
        "type": "number",
        "default": 60,
        "minimum": 1,
        "maximum": 1440,
        "description": "Sync interval in minutes (1-1440, default 60)"
      }
    }
  },
  "uiHints": {
    "apiKey": {
      "label": "Honcho API Key",
      "sensitive": true,
      "placeholder": "hc_...",
      "help": "API key for Honcho (or use ${HONCHO_API_KEY})"
    },
    "workspaceId": {
      "label": "Workspace ID",
      "placeholder": "moltbot",
      "help": "Honcho workspace ID"
    },
    "baseUrl": {
      "label": "API Base URL",
      "advanced": true,
      "placeholder": "https://api.honcho.dev"
    },
    "syncOnStartup": {
      "label": "Sync on Startup",
      "help": "Sync representations to files when gateway starts"
    },
    "dailySyncEnabled": {
      "label": "Periodic Sync",
      "help": "Enable automatic sync at configured interval"
    },
    "syncFrequency": {
      "label": "Sync Frequency (minutes)",
      "help": "How often to sync Honcho representations to files (1-1440 minutes, default 60)"
    }
  }
}
